<div id="<%= dom_id attendance %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Check datetime:</strong>
    <%= attendance.check_datetime %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Action:</strong>
    <%= attendance.action %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Employee:</strong>
    <%= attendance.employee_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this attendance", attendance, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this attendance', edit_attendance_path(attendance), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
